{
  "extends": "./.svelte-kit/tsconfig.json",
  "include": [
    // .svelte-kit/tsconfig.json
    ".svelte-kit/ambient.d.ts",
    ".svelte-kit/non-ambient.d.ts",
    ".svelte-kit/types/**/$types.d.ts",
    "vite.config.js",
    "vite.config.ts",
    "pages/**/*.js",
    "pages/**/*.ts",
    "pages/**/*.svelte",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.svelte",
    // Mods
    "bin/mods/**/*.svelte",
    "bin/mods/**/*.ts"
  ],
  "compilerOptions": {
    "skipLibCheck": true
  }
}
